<div class="post-preview">
    <img src="{{ article.picture }}" width="300" class="float-left mr-3">
    <a href="{{ path('article', { id:article.id }) }}">
        <h2 class="post-title">
            {{ article.title }}
        </h2>
    </a>
    <p>{{ article.content | u.truncate(100,'...') }}</p>
    <p class="post-meta">Posté par
        <a href="#"></a>
        le {{ article.publishedAt | date("d-m-Y à H:i")}} dans la catégory <a
            href="{{ path('category',{id:article.category.id}) }}">{{ article.category.title }}</a>
    </p>
</div>
<hr>