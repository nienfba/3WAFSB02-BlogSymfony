{% extends 'admin.html.twig' %}

{% block title %}Voulez vous supprimez le commentaire de "{{ comment.pseudo }}" {% endblock %}


{% block body %}
<form method="POST" action="{{ path('comment_del_confirm', {'id': comment.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-value') }}">

    <a href="{{ path('comment_list') }}" class="btn btn-secondary">Retour</a>
    <input type="submit" class="btn btn-success" value="Supprimer">
</form>
{% endblock %}